{%- if section.blocks.size > 0 -%}
{%- if section.settings.enabled_home_top_image_text -%}
<div class="home-top-img-text-section">
  <div class="container">
    <ul class="home-top-img-text">
      {%- for block in section.blocks -%}
      {%- if block.settings.image != blank and block.settings.title != blank and block.settings.link != blank -%}
      <li>
        <figure><a href="{{ block.settings.link }}"><img src="{{ block.settings.image | img_url: 'master' }}" /></a></figure>
        <h4><a href="{{ block.settings.link }}">{{ block.settings.title }}</a></h4>
      </li>
      {%- endif -%}
      {%- endfor -%}
    </ul>
  </div>
</div>
{%- endif -%}
  {%- endif -%}

  

{% schema %}
  {
    "name": "Home Top Image Text",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled_home_top_image_text",
        "label": "Show Home Top Image Text",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "Image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Top Image Text",
        "category": "Text"
      }
    ]
  }
{% endschema %}

