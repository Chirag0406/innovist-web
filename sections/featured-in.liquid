<div class="featured-in-section">
  {% if section.settings.title != blank %}
  <h2 class="title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="featured-in">
      <ul class="featured-in-slider">
        {% for block in section.blocks %}
        {% if block.settings.icon != blank and block.settings.link != blank %}
        <li><a href="{{ block.settings.link }}"><img src="{{ block.settings.icon | img_url: 'master' }}" /></a></li>
          {% endif %}
          {% endfor %}
      </ul>
    </div>
</div>

<script>
  
  $(document).ready(function(){
  $('.featured-in-slider').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 1,
    speed: 6000,
    dots: false,
    arrows: false,
    cssEase: 'linear',
    waitForAnimate: false,
    pauseOnFocus: false, 
    pauseOnHover: false,
    responsive: [
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    }
  ]
  });
     $('.scrollable-grid--small').slick({
		dots: false,
		arrows: true,
		infinite: true,
		speed: 300,
		slidesToShow: 5,
		slidesToScroll: 1,
       responsive: [
         {
      breakpoint: 1550,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1
      }
    },
         {
      breakpoint: 1199,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
  ]
});
    $('.featured-tab-product-grid').slick({
		dots: false,
		arrows: true,
		infinite: true,
		speed: 300,
		slidesToShow: 5,
		slidesToScroll: 1,
       responsive: [
         {
      breakpoint: 1550,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1
      }
    },
         {
      breakpoint: 1199,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 768,
      settings: {
        rows: 1,
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
  ]
});

$('.featured-collection-tab-inner button').on('click', function(){
  $('.featured-tab-product-grid').slick('unslick');
  $('.scrollable-grid--small').slick('unslick');
  $('.scrollable-grid--small').slick({
		dots: false,
		arrows: true,
		infinite: true,
		speed: 300,
		slidesToShow: 5,
		slidesToScroll: 1,
       responsive: [
         {
      breakpoint: 1550,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1
      }
    },
         {
      breakpoint: 1199,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
  ]
});
    $('.featured-tab-product-grid').slick({
		dots: false,
		arrows: true,
		infinite: true,
		speed: 300,
		slidesToShow: 5,
		slidesToScroll: 1,
       responsive: [
         {
      breakpoint: 1550,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1
      }
    },
         {
      breakpoint: 1199,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 768,
      settings: {
        rows: 2,
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
  ]
});
})
    
});
</script>

