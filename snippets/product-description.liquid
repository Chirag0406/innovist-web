{% capture description %}

  {%- if product.empty? -%}
        {{ 'home_page.onboarding.product_description' | t }}
  {%- else -%}
  {% if product.description.size > 300 %}
  <div class="product-description-long">
  {{ product.description | truncate: 300, "..."}}
  <br><div class="readmore" onclick="readMore1()"><i class="fa fa-chevron-down" style="font-size:32px"></i></div>
  </div>
  <div class="product-description-full" style="display:none;">
  {{ product.description }}
  <br><div class="readless" onclick="readLess1()"><i class="fa fa-chevron-up" style="font-size:32px"></i></div>
  </div>
  {% else %}
    {{ product.description }}
{% endif %} 
  {%- endif -%}
      
{% endcapture %}
{%- if is_tab -%}
  {% assign title = 'products.product.description' | t %}
  {%- render 'tab', id: id, title: title, content: description -%}
{%- else -%}
  <div class="rte">
    {{ description }}
  </div>
{%- endif -%}

<script>
  function readMore1(){
     event.preventDefault();
  var descriptionFull = document.querySelector('.product-description-full');
  descriptionFull.style.display = 'block';
  var descriptionShort = document.querySelector('.product-description-long');
  descriptionShort.style.display = 'none';
  }
  function readLess1(){
     event.preventDefault();
  var descriptionFull = document.querySelector('.product-description-full');
  descriptionFull.style.display = 'none';
  var descriptionShort = document.querySelector('.product-description-long');
  descriptionShort.style.display = 'block';
  }
</script>