<style>
  .stap_wrapper{background: #27283a;padding:25px 0px;}
  .cta_button{padding:25px 0px;text-align:center;}
  .cta_button a{text-transform: uppercase;color:#fff;background:#000;padding:15px;}
  .cta_button a:hover{color:#000;}
   .step_itam_wrapper {
      display: flex;
      text-align: center;
      justify-content: space-between;
      align-items: center;
  }
    .how-it-works-footer-text,
    .stap_wrapper_text{
      color:white;
      text-align: center;
      width: 90%;
      margin: 0 auto 20px;
      font-family:'PlayfairDisplay';
    }
    .how-it-works-footer-text{
     color: #27283a;
    }
    .how-it-works-img{
      padding:14px;
    }

    @media (min-width:700px){
      .how-it-works-img{
        padding:20px 35px;
      }
    }

   @media (min-width:1100px){
      .how-it-works-img{
        padding:20px 50px;
      }
    }
</style>
<div class="stap_wrapper">
  <div class="page-width">
    <p class="stap_wrapper_text">
      Build your own Box full of Science based products to protect your skin/hair & enjoy the festivities to the fullest in 3 simple steps
    </p>
    <div class="step_itam_wrapper">
      {% for block in section.blocks %}
        <div class="step_itam">
          {% if block.settings.image != blank or block.settings.step_content != blank %}
            <h4>Step {{ forloop.index }}</h4>
            {% if block.settings.image != blank %}
              <img
                class="how-it-works-img"
                src="{{ block.settings.image | img_url:"master"}}"
                alt="{{ block.settings.image.alt }}"
              >
            {% endif %}
            {{ block.settings.step_content }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% if section.settings.linklabel != blank %}
  <div class="cta_button">
    <a href="javascript:void(0)" class="show_builder">{{ section.settings.linklabel }}</a>
  </div>

  {% if section.settings.linklabel != blank %}
    <div class="page-width">
      <p class="how-it-works-footer-text">{{ section.settings.bottom_text }}</p>
    </div>
  {% endif %}
{% endif %}
